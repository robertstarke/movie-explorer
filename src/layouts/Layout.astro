---
interface Props {
  title: string;
}

const { title } = Astro.props;

const links = [
  { href: "/movie-db/", title: "Favorites", text: "Home" },
  { href: "/movie-db/movies", title: "all Movies", text: "All Movies" },
  { href: "/movie-db/playlists", title: "all Playlists", text: "All Playlists" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-900 text-zinc-100">
    <header class="px-6 pt-6">
      <nav class="flex flex-row gap-6 items-center text-lg">
        {
          links.map(({ href, title, text }) => (
            <a class="hover:text-green-600 focus:outline-none focus:text-green-600" href={href} title=`Page with ${title}`>
              {text}
            </a>
          ))
        }
      </nav>
    </header>
    <slot />
  </body>
</html>
