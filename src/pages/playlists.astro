---
import { getCollection } from "astro:content";

import Layout from "../layouts/Layout.astro";
import PlaylistCard from "../components/PlaylistCard.astro";

const playlists = await getCollection("playlists");
---

<Layout title="All Playlists">
  <section id="playlists" class="m-6 grid grid-cols-6 gap-6">
    {
      playlists.map(({ data: playlist }) => (
        <PlaylistCard playlist={playlist} />
      ))
    }
  </section>
</Layout>
